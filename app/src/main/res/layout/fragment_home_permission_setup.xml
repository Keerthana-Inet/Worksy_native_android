<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/onboard_gradient"
        tools:context=".views.fragments.permissionsetup.HomePermissionSetupFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            app:layout_constraintBottom_toTopOf="@+id/view1"
            android:background="@drawable/background_round_border"
           android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/lyt_header"
                android:padding="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/back"
                    android:id="@+id/back"
                    android:textColor="@color/thin_gray"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_13sdp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/skip"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintStart_toEndOf="@+id/back"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="50sp"
                        android:layout_weight="1"
                        android:id="@+id/tabView1"
                        android:background="@drawable/blue_background_border"
                        app:layout_constraintStart_toEndOf="@+id/back"
                        android:layout_height="6sp"/>
                    <View
                        android:layout_width="50sp"
                        android:layout_weight="1"
                        android:id="@+id/tabView2"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/rounded_bottom_corners"
                        app:layout_constraintStart_toEndOf="@+id/back"
                        android:layout_height="6sp"/>
                    <View
                        android:layout_width="50sp"
                        android:layout_weight="1"
                        android:id="@+id/tabView3"
                        android:background="@drawable/rounded_bottom_corners"
                        app:layout_constraintStart_toEndOf="@+id/back"
                        android:layout_height="6sp"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/skip"
                    android:id="@+id/skip"
                    android:textColor="@color/button_txt"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/lyt_header"
                android:background="@color/button_txt"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="0.5dp"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@+id/btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lyt_header" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/continue_txt"
                android:padding="@dimen/_5sdp"
                android:textAllCaps="false"
                android:background="@drawable/button_background_round_corner"
                android:gravity="center"
                android:id="@+id/btn"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_3sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_40sdp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="@dimen/_110sdp"
        android:id="@+id/view1"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_border"
        android:backgroundTint="@color/black"
       android:layout_marginBottom="@dimen/_5sdp"
        android:layout_height="@dimen/_4sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

