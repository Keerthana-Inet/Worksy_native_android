<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.fragments.claimRequest.ClaimRequestTab2">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/footer_view"
            android:id="@+id/nested_scroll_view"
            android:scrollbars="none"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_semibold"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/title_txt"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/text_color"
                    android:text="@string/claim"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/subtitle_txt"
                    app:layout_constraintTop_toBottomOf="@+id/title_txt"
                    android:textColor="#475467"
                    android:text="@string/select_and_fill_details_form_in_claim"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linear_lyt"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subtitle_txt"
                    android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/claim_item_lyt"
                    android:background="@drawable/bg_edit_text"
                    android:padding="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/budget_item_btn"
                        android:text="@string/claim_item"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:drawableStart="@drawable/ic_plus"
                        android:drawablePadding="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:drawableTint="@color/white"
                        app:fontFamily="@font/inter_semibold"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:id="@+id/camera_icon"
                        android:src="@drawable/ic_camera_icon"
                        android:layout_height="@dimen/_40sdp"/>
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_filter"
                    android:backgroundTint="#F3F7FF"
                    android:visibility="gone"
                    android:id="@+id/file_upload_layout"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/linear_lyt"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="wrap_content">
                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:background="@drawable/background_border"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       android:padding="@dimen/_10sdp"
                       android:layout_height="wrap_content">
                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:layout_width="match_parent"
                           android:padding="@dimen/_5sdp"
                           app:layout_constraintTop_toTopOf="parent"
                           android:id="@+id/upload_file_lyt"
                           android:layout_height="wrap_content">
                           <androidx.appcompat.widget.AppCompatImageView
                               android:layout_width="@dimen/_40sdp"
                               android:id="@+id/upload_camera"
                               android:padding="@dimen/_5sdp"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toTopOf="parent"
                               android:src="@drawable/upload_file"
                               android:layout_height="@dimen/_40sdp"/>

                       <androidx.appcompat.widget.AppCompatTextView
                           android:layout_width="wrap_content"
                           app:layout_constraintStart_toEndOf="@+id/upload_camera"
                           app:layout_constraintTop_toTopOf="parent"
                           android:text="@string/upload_file_txt"
                           android:id="@+id/upload_file_txt"
                           android:textColor="@color/black"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:layout_marginLeft="@dimen/_10sdp"
                           android:textSize="@dimen/_12sdp"
                           app:fontFamily="@font/inter_semibold"
                           android:layout_height="wrap_content"/>

                           <androidx.appcompat.widget.AppCompatTextView
                               android:layout_width="wrap_content"
                               app:layout_constraintStart_toEndOf="@+id/upload_camera"
                               app:layout_constraintTop_toBottomOf="@+id/upload_file_txt"
                               android:text="@string/choose_from_your_album"
                               android:layout_marginLeft="@dimen/_10sdp"
                               android:textColor="#3F4E63"
                               android:id="@+id/choose_your_album_txt"
                               android:textSize="@dimen/_12sdp"
                               app:fontFamily="@font/inter_regular"
                               android:layout_height="wrap_content"/>


                       </androidx.constraintlayout.widget.ConstraintLayout>

                           <View
                               android:layout_width="match_parent"
                               android:layout_marginTop="@dimen/_2sdp"
                               android:background="@color/thin_gray"
                               android:id="@+id/view1"
                               app:layout_constraintTop_toBottomOf="@+id/upload_file_lyt"
                               android:layout_height="@dimen/_1sdp"/>
                           <androidx.constraintlayout.widget.ConstraintLayout
                               android:layout_width="match_parent"
                               android:padding="@dimen/_5sdp"
                               app:layout_constraintTop_toBottomOf="@+id/upload_file_lyt"
                               android:id="@+id/scan_qr_lyt"
                               android:layout_height="wrap_content">

                               <androidx.appcompat.widget.AppCompatImageView
                                   android:layout_width="@dimen/_40sdp"
                                   android:id="@+id/scan_qr_img"
                                   android:padding="@dimen/_5sdp"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent"
                                   android:src="@drawable/scan_qr_img"
                                   android:layout_height="@dimen/_40sdp"/>

                               <androidx.appcompat.widget.AppCompatTextView
                                   android:layout_width="wrap_content"
                                   app:layout_constraintStart_toEndOf="@+id/scan_qr_img"
                                   app:layout_constraintTop_toTopOf="parent"
                                   android:text="@string/scan_qr_code_txt"
                                   android:id="@+id/scan_qr_txt"
                                   android:textColor="@color/black"
                                   android:gravity="center"
                                   android:layout_marginTop="@dimen/_10sdp"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   android:textSize="@dimen/_12sdp"
                                   app:fontFamily="@font/inter_semibold"
                                   android:layout_height="wrap_content"/>

                           </androidx.constraintlayout.widget.ConstraintLayout>
                           <View
                               android:layout_width="match_parent"
                               android:layout_marginTop="@dimen/_2sdp"
                               android:background="@color/thin_gray"
                               android:id="@+id/view2"
                               app:layout_constraintTop_toBottomOf="@+id/scan_qr_lyt"
                               android:layout_height="@dimen/_1sdp"/>

                           <androidx.constraintlayout.widget.ConstraintLayout
                               android:layout_width="match_parent"
                               android:padding="@dimen/_5sdp"
                               app:layout_constraintTop_toBottomOf="@+id/scan_qr_lyt"
                               android:id="@+id/select_from_receipts_lyt"
                               android:layout_height="wrap_content">

                               <androidx.appcompat.widget.AppCompatImageView
                                   android:layout_width="@dimen/_40sdp"
                                   android:id="@+id/file_img"
                                   android:padding="@dimen/_5sdp"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent"
                                   android:src="@drawable/ic_file"
                                   android:layout_height="@dimen/_40sdp"/>

                               <androidx.appcompat.widget.AppCompatTextView
                                   android:layout_width="wrap_content"
                                   app:layout_constraintStart_toEndOf="@+id/file_img"
                                   app:layout_constraintTop_toTopOf="parent"
                                   android:text="@string/select_from_receipts"
                                   android:id="@+id/file_txt"
                                   android:textColor="@color/black"
                                   android:gravity="center"
                                   android:layout_marginTop="@dimen/_10sdp"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   android:textSize="@dimen/_12sdp"
                                   app:fontFamily="@font/inter_semibold"
                                   android:layout_height="wrap_content"/>

                           </androidx.constraintlayout.widget.ConstraintLayout>

                       </androidx.constraintlayout.widget.ConstraintLayout>
                   </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/create_form_lyt"
                    app:layout_constraintTop_toBottomOf="@+id/file_upload_layout"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:id="@+id/recyclerView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/create_form_lyt"
                    android:layout_height="@dimen/_10sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    <View
        android:layout_width="match_parent"
        android:id="@+id/footer_view"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/thin_gray"
        app:layout_constraintBottom_toTopOf="@+id/footer_lyt"
        android:layout_height="@dimen/_1sdp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/footer_lyt"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:id="@+id/donation_hand_img"
            android:padding="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/donation_hand"
            android:layout_height="@dimen/_40sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/donation_hand_img"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/total_claim_txt"
            android:id="@+id/total_claim_txt"
            android:textColor="#111C33"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_medium"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="RM 0.00"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/rm_value_txt"
            android:textColor="#111C33"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_medium"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/donation_hand_img"
            app:layout_constraintTop_toBottomOf="@+id/total_claim_txt"
            android:text="0 item"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#596276"
            android:id="@+id/item_count_txt"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total_claim_txt"
            android:text="Inc. Tax"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#596276"
            android:id="@+id/inc_tax_txt"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
