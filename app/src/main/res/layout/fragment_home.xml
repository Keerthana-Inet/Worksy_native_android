<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/actionbar_lyt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nested_scroll"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/title"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/travel_request"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/button_txt"
            app:fontFamily="@font/inter_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_10sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:drawableStart="@drawable/summary_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@drawable/rounded_bottom_corners"
            android:backgroundTint="#E7F1FF"
            android:id="@+id/summary_txt"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/summary_txt"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/nested_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:scrollbars="none"
        android:background="@drawable/background_curve_border"
        app:layout_constraintTop_toBottomOf="@+id/actionbar_lyt"
        android:layout_height="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondary_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@+id/actionbar_lyt">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_50sdp"
                android:src="@drawable/sort_icon"
                android:id="@+id/sort_btn"
                android:padding="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="@dimen/_40sdp"/>
            <EditText
                android:layout_width="0dp"
                android:hint="@string/search_txt"
                app:layout_constraintEnd_toStartOf="@+id/sort_btn"
                android:paddingTop="@dimen/_7sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:id="@+id/search_btn"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_regular"
                android:paddingBottom="@dimen/_7sdp"
                android:background="@drawable/background_border"
                android:drawablePadding="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableStart="@drawable/search_icon"
                android:layout_height="@dimen/_40sdp"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_btn"
                app:tabIndicator="@drawable/tab_unselectedcolor"
                app:tabIndicatorColor="@null"
                app:tabIndicatorHeight="@dimen/_2sdp"
                app:tabMaxWidth="0dp"
                app:tabPaddingEnd="6dp"
                app:tabPaddingStart="4dp"
                app:tabSelectedTextColor="#2E5DA0"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/black" >
            </com.google.android.material.tabs.TabLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="#596276"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/hand_txt"
                app:fontFamily="@font/inter_regular"
                android:drawableStart="@drawable/hand"
                android:padding="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="@string/press_and_hold_to_select_multiple_item"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout"
                android:layout_height="wrap_content"/>
            <com.worksy.hr.art.views.adapter.CustomViewPager
                android:layout_width="match_parent"
                android:id="@+id/viewPager"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hand_txt"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:src="@drawable/ic_plus"
        android:id="@+id/fab_plus"
        android:tintMode="@color/white"
        app:shapeAppearanceOverlay="@style/RoundedShape"
        android:backgroundTint="@color/button_txt"
        android:background="@drawable/circle_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_100sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:src="@drawable/ic_camera"
        android:id="@+id/fab_camera"
        app:shapeAppearanceOverlay="@style/RoundedShape"
        android:tintMode="@color/white"
        android:backgroundTint="@color/button_txt"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fab_plus"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:src="@drawable/download"
        android:id="@+id/fab_download"
        android:tintMode="@color/white"
        app:shapeAppearanceOverlay="@style/RoundedShape"
        android:backgroundTint="@color/button_txt"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fab_camera"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:src="@drawable/pdf"
        android:tintMode="@color/white"
        android:id="@+id/fab_pdf"
        app:shapeAppearanceOverlay="@style/RoundedShape"
        android:backgroundTint="@color/button_txt"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fab_download"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>