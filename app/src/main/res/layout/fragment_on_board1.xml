<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.onboard.OnBoardFragment1">

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Next"
        android:id="@+id/next_txt"
        android:visibility="gone"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/white"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableTint="@color/white"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_txt"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/onboard1_img"
        android:src="@drawable/onboard1"
        android:layout_height="@dimen/_170sdp"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboard1_img"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/title_txt"
        android:text="Say Hello to Worksy AI"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="250sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/light_text"
        android:textSize="12sp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="Meet your new go-to helper, Worksy AI! Always on standby to chat, just send a message in the chat box and watch as Worksy delivers prompt, and insightful replies to guide you through."
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>