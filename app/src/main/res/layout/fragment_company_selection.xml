<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.companyselection.CompanySelectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/actionbar_lyt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/secondary_lyt"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="@dimen/_35sdp"
            android:id="@+id/back_arrow"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/left_arrow"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_arrow"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/title"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/company_selection_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:id="@+id/subtitle"
            android:fontFamily="@font/inter_regular"
            android:text="@string/company_selection_desc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_90sdp"
        android:id="@+id/secondary_lyt"
        android:background="@drawable/background_curve_border"
        app:layout_constraintTop_toTopOf="@+id/actionbar_lyt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/company_recyclerview"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            android:id="@+id/rel_company_a"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_filter"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/company_a"
                android:id="@+id/company_a_img"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/company_a_img"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="@string/company_a"
                android:id="@+id/company_a_txt"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/button_txt"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_width="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:button="@null"
                android:id="@+id/cmpny_checkbox"
                android:padding="@dimen/_5sdp"
                android:clickable="false"
                android:background="@drawable/custom_checkbox"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/rel_company_a"
            android:id="@+id/rel_company_b"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_filter"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/netflix"
                android:id="@+id/company_b_img"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/company_b_img"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="@string/company_b"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/company_b_txt"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_width="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:button="@null"
                android:id="@+id/cmpny_b_checkbox"
                android:padding="@dimen/_5sdp"
                android:clickable="false"
                android:background="@drawable/custom_checkbox"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/rel_company_b"
            android:id="@+id/rel_company_c"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_filter"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/company_c"
                android:id="@+id/company_c_img"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/company_c_img"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="@string/company_c"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/company_c_txt"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_width="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:button="@null"
                android:clickable="false"
                android:id="@+id/cmpny_c_checkbox"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/custom_checkbox"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/rel_company_c"
            android:id="@+id/rel_company_d"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_filter"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/company_d"
                android:id="@+id/company_d_img"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/company_d_img"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="@string/company_d"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/company_d_txt"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_width="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:button="@null"
                android:id="@+id/cmpny_d_checkbox"
                android:clickable="false"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/custom_checkbox"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>
        <CheckBox
            android:layout_width="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:button="@null"
            android:id="@+id/checkbox"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/custom_checkbox"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/company_recyclerview"
            android:layout_height="@dimen/_15sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/dont_ask_me_again_txt"
            android:fontFamily="@font/inter_semibold"
            android:textSize="12sp"
            android:id="@+id/dont_ask_again_btn"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            app:layout_constraintTop_toBottomOf="@+id/company_recyclerview"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/set_default_company_to_login_txt"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"
            android:id="@+id/dont_ask_again_desc"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            app:layout_constraintTop_toBottomOf="@+id/dont_ask_again_btn"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/bg_button"
            android:backgroundTint="@color/button_txt"
            android:text="@string/continue_txt"
            android:id="@+id/continue_btn"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/_35sdp"/>

        <View
            android:layout_width="@dimen/_110sdp"
            android:id="@+id/view1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_height="@dimen/_4sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>