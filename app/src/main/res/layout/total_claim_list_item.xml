<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="totalclaimList"
            type="com.worksy.hr.art.models.claimApproval.ClaimApprovalProgressResponse.ClaimApprovalData.ClaimEmployee.ClaimForm.ClaimItem" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="@dimen/_23sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/total_item_count"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/circle_border"
        android:backgroundTint="@color/fab_blue"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_12sdp"
        android:textColor="#3B73C3"
        android:fontFamily="@font/inter_medium"
        android:layout_height="@dimen/_23sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/total_claim_item_txt"
        android:paddingTop="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/total_item_count"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/rm_value_totalclaim"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>