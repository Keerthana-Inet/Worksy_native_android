<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.travelRequest.TravelRequestDetailPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/actionbar_lyt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nested_scroll"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/back_arrow"
            android:id="@+id/back_img"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="@dimen/_33sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/back_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/title"
            android:fontFamily="@font/inter_semibold"
            android:text="TR-107"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/message"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/button_txt"
            app:fontFamily="@font/inter_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:drawableStart="@drawable/summary_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@drawable/rounded_bottom_corners"
            android:backgroundTint="#E7F1FF"
            android:id="@+id/summary_txt"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/summary_txt"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/nested_scroll"
        app:layout_constraintBottom_toTopOf="@+id/footer_lyt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:scrollbars="none"
        android:background="@drawable/background_curve_border"
        app:layout_constraintTop_toBottomOf="@+id/actionbar_lyt"
        android:layout_height="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondary_lyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="@drawable/background_curve_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar_lyt">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/userdetail_lyt"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/background_curve_border"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:text="TR-107"
                        android:id="@+id/tr_id"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:fontFamily="@font/inter_medium"
                        android:background="@drawable/blue_background_border"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:text="Pending"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/button_txt"
                        android:paddingLeft="@dimen/_10sdp"
                        android:id="@+id/trType"
                        android:drawableStart="@drawable/getting_ready_icon"
                        android:drawablePadding="@dimen/_5sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/inter_medium"
                        android:background="@drawable/blue_background_border"
                        android:backgroundTint="@color/thin_blue"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tr_id"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:padding="@dimen/_1sdp"
                        android:id="@+id/stage"
                        android:textSize="@dimen/_12sdp"
                        android:text="Stage1"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintTop_toBottomOf="@+id/trType"
                        android:layout_height="wrap_content"/>

                  <androidx.appcompat.widget.AppCompatSpinner
                      android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:id="@+id/spinner"
                      android:theme="@style/CustomSpinnerStyle"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/stage"
                      android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/thin_gray"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    android:layout_height="0.5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/userdetail_lyt"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_medium"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:id="@+id/title_txt"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_color"
                    android:text="@string/estimated_cost"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:id="@+id/subtitle_txt"
                    app:layout_constraintTop_toBottomOf="@+id/title_txt"
                    android:textColor="#475467"
                    android:text="Costing for travel request"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/subtitle_txt"
                    android:id="@+id/travel_req_recyclerview"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/footer_lyt"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:id="@+id/footer_view"
            android:background="@color/thin_gray"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:id="@+id/claim_img"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/footer_view"
            android:src="@drawable/total_budget_icon"
            android:layout_height="@dimen/_40sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/claim_img"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Total Budget"
            android:id="@+id/total_budget_txt"
            android:textColor="#111C33"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_medium"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="RM 4,200.00"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/rm_value_txt"
            android:textColor="#111C33"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_medium"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/claim_img"
            app:layout_constraintTop_toBottomOf="@+id/total_budget_txt"
            android:text="4 item"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#596276"
            android:id="@+id/item_count_txt"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total_budget_txt"
            android:text="Inc. Tax"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#596276"
            android:id="@+id/inc_tax_txt"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/inter_medium"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:id="@+id/footer_view2"
            android:background="@color/thin_gray"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/item_count_txt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linear_lyt"
            android:padding="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@+id/footer_view2"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="Cancel Request"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/cancel_request_btn"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:background="@drawable/button_background"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/footer_view"
                android:id="@+id/edit_btn"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:background="@drawable/blue_background_border"
                app:layout_constraintStart_toEndOf="@+id/save_for_later"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>