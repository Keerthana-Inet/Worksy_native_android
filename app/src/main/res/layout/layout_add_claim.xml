<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/secondary_lyt"
        android:background="@drawable/background_curve_border"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/back_img"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_back"
            app:tintMode="@color/light_gray"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/claim"
            android:textColor="#101828"
            android:fontFamily="@font/inter_medium"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/claim_txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cloase"
            app:tintMode="@color/light_gray"
            android:id="@+id/cancel_btn"
            android:textColor="#3B73C3"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/inter_semibold"
            android:padding="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/thin_gray"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/claim_txt"
            android:layout_height="0.7dp"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:padding="@dimen/_5sdp"
                android:id="@+id/userdetail_lyt"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_semibold"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/title_txt"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/text_color"
                    android:text="@string/estimated_cost_item"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/subtitle_txt"
                    app:layout_constraintTop_toBottomOf="@+id/title_txt"
                    android:textColor="#475467"
                    android:text="@string/select_relevant_estimated_claim_item"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/bg_filter"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/rel_budget_item"
                    app:layout_constraintTop_toBottomOf="@+id/subtitle_txt"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/budget_item_txt"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#344054"
                        android:text="@string/budget_item"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:id="@+id/spinner"
                        android:layout_below="@+id/budget_item_txt"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/bg_filter"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/rel_title"
                    app:layout_constraintTop_toBottomOf="@+id/rel_budget_item"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/title"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#344054"
                        android:text="@string/budget_amount"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_13sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:layout_below="@+id/title"
                        android:id="@+id/desc_txt"
                        android:textColor="#101828"
                        android:text="RM 2,000.00"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/bg_filter"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/rel_remarks"
                    app:layout_constraintTop_toBottomOf="@+id/rel_title"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/remarks_txt"
                        android:padding="@dimen/_5sdp"
                        android:textColor="#344054"
                        android:text="@string/remarks"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_13sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@null"
                        android:minLines="4"
                        android:gravity="top|left"
                        android:hint="Peak Season."
                        android:textColorHint="#101828"
                        android:padding="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:layout_below="@+id/remarks_txt"
                        android:id="@+id/sub_desc_txt"
                        android:textColor="#101828"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:id="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/userdetail_lyt"
            app:layout_constraintBottom_toTopOf="@+id/footer_view"
            android:layout_height="@dimen/_120sdp"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/thin_gray"
            android:id="@+id/footer_view"
            android:layout_marginBottom="@dimen/_70sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="1dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="@string/add_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:gravity="center"
            android:id="@+id/add_btn"
            app:layout_constraintTop_toBottomOf="@+id/footer_view"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/blue_background_border"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linear_lyt"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintTop_toBottomOf="@+id/footer_view"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="@string/save_for_later"
                android:textColor="#344054"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/save_for_later"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/button_background"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/footer_view"
                android:id="@+id/nxt2_btn"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/blue_background_border"
                app:layout_constraintStart_toEndOf="@+id/save_for_later"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>