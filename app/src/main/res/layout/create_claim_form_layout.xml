<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/nested_scroll"
        android:scrollbars="none"
        android:background="@drawable/background_curve_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footer_constraint_lyt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/secondary_lyt"
        android:background="@drawable/background_curve_border"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/back_img"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_back"
            app:tintMode="@color/light_gray"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/claim"
            android:textColor="#101828"
            android:fontFamily="@font/inter_medium"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/claim_txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cloase"
            app:tintMode="@color/light_gray"
            android:id="@+id/cancel_btn"
            android:textColor="#3B73C3"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/inter_semibold"
            android:padding="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/thin_gray"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/claim_txt"
            android:layout_height="0.7dp"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:padding="@dimen/_5sdp"
            android:id="@+id/userdetail_lyt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/inter_semibold"
                android:padding="@dimen/_5sdp"
                android:id="@+id/title_txt"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/text_color"
                android:text="@string/new_claim_item_txt"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/subtitle_txt"
                app:layout_constraintTop_toBottomOf="@+id/title_txt"
                android:textColor="#475467"
                android:text="@string/fill_details_of_claim"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_claim_group"
                app:layout_constraintTop_toBottomOf="@+id/subtitle_txt"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/claim_group_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="@string/claim_group"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/claim_group_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="@dimen/_10sdp"
                   android:layout_below="@+id/claim_group_txt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_claim_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/claim_group_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_claim_item"
                app:layout_constraintTop_toBottomOf="@+id/rel_claim_group"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/claim_item_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="@string/claim_item"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:id="@+id/spinner"
                    android:layout_below="@+id/claim_item_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/rel_date"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/rel_claim_item"
                android:background="@drawable/bg_filter"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/date_txt"
                    android:layout_marginLeft="@dimen/_3sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="#28364D"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/date_txt"
                    android:fontFamily="@font/inter_regular"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/date"
                    android:layout_marginLeft="@dimen/_3sdp"
                    app:layout_constraintTop_toBottomOf="@id/date_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="#111C33"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:text="2024-06-20"
                    android:fontFamily="@font/inter_regular"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/tax_linear_lyt"
                android:padding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rel_date"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/amount_tax_lyt"
                    android:layout_weight="1"
                    android:background="@drawable/bg_filter"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:padding="@dimen/_3sdp"
                        android:id="@+id/amount_tax_txt"
                        android:layout_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="#28364D"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/amount_tax"
                        android:fontFamily="@font/inter_regular"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:padding="@dimen/_3sdp"
                        android:id="@+id/amount_tax"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:inputType="number"
                        app:layout_constraintTop_toBottomOf="@id/amount_tax_txt"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="#111C33"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:hint="28.00"
                        android:fontFamily="@font/inter_regular"
                        android:layout_height="wrap_content"/>



                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/tax_lyt"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_filter"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:padding="@dimen/_3sdp"
                        android:id="@+id/tax_txt"
                        android:layout_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="#28364D"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/tax"
                        android:fontFamily="@font/inter_regular"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:padding="@dimen/_3sdp"
                        android:id="@+id/tax"
                        android:layout_weight="1"
                        android:inputType="number"
                        app:layout_constraintTop_toBottomOf="@id/tax_txt"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="#111C33"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@null"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:hint="5.30"
                        android:fontFamily="@font/inter_regular"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_pax_staff"
                app:layout_constraintTop_toBottomOf="@+id/tax_linear_lyt"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/pax_staff_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="Pax (Staff)"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_pax_staff"
                    android:hint=""
                    android:background="@null"
                    android:layout_below="@+id/pax_staff_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_pax_customer_existing"
                app:layout_constraintTop_toBottomOf="@+id/rel_pax_staff"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/pax_customer_existing_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="Pax (Customer Existing)"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_pax_customer_existing"
                    android:hint=""
                    android:background="@null"
                    android:layout_below="@+id/pax_customer_existing_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_pax_customer_potential"
                app:layout_constraintTop_toBottomOf="@+id/rel_pax_customer_existing"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/pax_customer_potential_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="Pax (Customer Potential)"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_pax_customer_potential"
                    android:hint=""
                    android:background="@null"
                    android:layout_below="@+id/pax_customer_potential_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_pax_principal"
                app:layout_constraintTop_toBottomOf="@+id/rel_pax_customer_potential"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/pax_principal_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="Pax (Principal)"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_pax_principal"
                    android:hint=""
                    android:background="@null"
                    android:layout_below="@+id/pax_principal_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:id="@+id/rel_customfield"
                app:layout_constraintTop_toBottomOf="@+id/rel_pax_principal"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recycler_customfield"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_filter"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_project"
                app:layout_constraintTop_toBottomOf="@+id/rel_customfield"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/project_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="Reason"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_project"
                    android:hint=""
                    android:inputType="text"
                    android:textSize="@dimen/_12sdp"
                    android:background="@null"
                    android:layout_below="@+id/project_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_remarks"
                app:layout_constraintTop_toBottomOf="@+id/rel_project"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/remarks_txt"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="@string/remarks"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/remarks_type"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_gray"
                    android:layout_toRightOf="@+id/remarks_txt"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:background="@null"
                    android:minLines="2"
                    android:gravity="top|left"
                    android:hint=""
                    android:textColorHint="#101828"
                    android:padding="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_below="@+id/remarks_txt"
                    android:id="@+id/remarks_et"
                    android:textColor="#101828"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rel_upload_file"
                app:layout_constraintTop_toBottomOf="@+id/rel_remarks"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/upload_file"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_drive"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/upload_file"
                    android:id="@+id/upload_file_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/button_txt"
                    android:text="@string/upload_file_txt"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/upload_file_txt"
                    android:paddingLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#475467"
                    android:text="@string/svg_png"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_filter"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:id="@+id/rel_image_uploaded_file"
                app:layout_constraintTop_toBottomOf="@+id/rel_upload_file"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_placeholder"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_img_placeholder"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_200sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="3"
                    android:layout_toRightOf="@+id/img_placeholder"
                    android:id="@+id/img_name"
                    android:paddingLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="IMG-1061.JPG"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="@dimen/_12sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_delete_icon"
                    android:id="@+id/delete_img"
                    android:paddingLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#344054"
                    android:text="IMG-1061.JPG"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/img_size"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/img_placeholder"
                    android:layout_below="@+id/img_name"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="#475467"
                    android:text="16 MB"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@+id/img_size"
                    android:layout_toLeftOf="@+id/percent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/img_placeholder"
                    android:background="@drawable/blue_background_border"
