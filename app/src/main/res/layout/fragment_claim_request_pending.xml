<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.claimRequest.ClaimRequestPending">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#596276"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/hand_txt"
        android:visibility="gone"
        app:fontFamily="@font/inter_regular"
        android:drawableStart="@drawable/hand"
        android:padding="@dimen/_5sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:text="@string/press_and_hold_to_select_multiple_item"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_border"
        android:id="@+id/header_lyt"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/hand_txt"
        android:layout_margin="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/select_all_txt"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/button_txt"
            app:fontFamily="@font/inter_semibold"
            android:paddingRight="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <CheckBox
            android:layout_width="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:button="@null"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/checkbox"
            android:paddingRight="@dimen/_1sdp"
            android:enabled="false"
            android:paddingLeft="@dimen/_5sdp"
            android:background="@drawable/custom_claim_checkbox"
            app:layout_constraintStart_toEndOf="@+id/select_all_txt"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="@dimen/_15sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Selected"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/selectedCount"
        android:textColor="@color/button_txt"
        app:fontFamily="@font/inter_medium"
        app:layout_constraintEnd_toStartOf="@+id/de_select"
        app:layout_constraintTop_toBottomOf="@+id/hand_txt"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deselect"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/de_select"
        android:textColor="@color/black"
        app:fontFamily="@font/inter_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hand_txt"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/header_lyt"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/pending_recyclerview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pending_recyclerview"
        android:layout_height="@dimen/_10sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>