<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_round_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/back"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/back_txt"
        android:layout_marginLeft="@dimen/_10sdp"
        android:fontFamily="@font/inter_semibold"
        android:drawableStart="@drawable/ic_lft_arrow"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/light_gray"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableTint="@color/light_gray"
        android:padding="@dimen/_2sdp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_25sdp"
        android:src="@drawable/ic_cloase"
        android:tint="@color/light_gray"
        android:padding="@dimen/_5sdp"
        android:id="@+id/close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="@dimen/_25sdp"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/thin_gray"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/back_txt"
        android:layout_height="0.5dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:layout_height="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/userdetail_lyt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/background_round_border"
        android:backgroundTint="@color/light_blue_color"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/title_txt"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/title_txt"
            android:maxLines="3"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/_17sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_txt"
            android:text="@string/time_txt"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/time_txt"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/light_gray"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_txt"
            android:text="@string/desc_txt"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/desc_txt"
            android:justificationMode="inter_word"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/light_black_txt"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/space_view"
            app:layout_constraintTop_toBottomOf="@+id/desc_txt"
            android:layout_height="@dimen/_10sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/setup_image"
        android:id="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/userdetail_lyt"
        android:layout_height="@dimen/_150sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/image"
            android:layout_height="@dimen/_50sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>