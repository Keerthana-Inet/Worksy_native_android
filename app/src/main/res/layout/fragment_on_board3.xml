<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.onboard.OnBoardFragment1">

    <ImageView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/onboard3_img"
        android:src="@drawable/onboard3"
        android:layout_height="@dimen/_170sdp"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboard3_img"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/inter_bold"
        android:id="@+id/title_txt"
        android:text="Connect with your team"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="250sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/light_text"
        android:fontFamily="@font/inter_regular"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Enhance team connectivity through our dynamic social features: Foster community, share knowledge, and conduct stand-up meetings seamlessly."
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>