<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:id="@+id/secondary_lyt"
        android:background="@drawable/background_curve_border"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/back_img"
            android:visibility="gone"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_back"
            app:tintMode="@color/light_gray"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="@string/travel_request"
        android:textColor="#101828"
        android:fontFamily="@font/inter_medium"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/travel_request_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="@string/cancel_btn"
        android:id="@+id/cancel_btn"
        android:textColor="#3B73C3"
        android:fontFamily="@font/inter_semibold"
        android:padding="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/thin_gray"
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/travel_request_txt"
        android:layout_height="0.7dp"/>
    <View
        android:layout_width="30sp"
        android:layout_weight="1"
        android:id="@+id/tabView1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:background="@drawable/blue_background_border"
        android:layout_height="6sp"/>

    <View
        android:layout_width="30sp"
        android:layout_weight="1"
        android:id="@+id/tabView2"
        app:layout_constraintStart_toEndOf="@+id/tabView1"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:background="@drawable/rounded_bottom_corners"
        android:layout_height="6sp"/>

    <View
        android:layout_width="30sp"
        android:layout_weight="1"
        android:id="@+id/tabView3"
        app:layout_constraintStart_toEndOf="@+id/tabView2"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:background="@drawable/rounded_bottom_corners"
        android:layout_height="6sp"/>
    <View
        android:layout_width="30sp"
        android:layout_weight="1"
        android:id="@+id/tabView4"
        app:layout_constraintStart_toEndOf="@+id/tabView3"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:background="@drawable/rounded_bottom_corners"
        android:layout_height="6sp"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/bottomViewPager"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/tabView4"
        app:layout_constraintBottom_toTopOf="@+id/footer_view"
        android:layout_height="0dp"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/thin_gray"
        android:id="@+id/footer_view"
        android:layout_marginBottom="@dimen/_70sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:gravity="center"
        android:id="@+id/next_btn"
        app:layout_constraintTop_toBottomOf="@+id/footer_view"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/blue_background_border"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linear_lyt"
       android:visibility="gone"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@+id/footer_view"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="@string/save_for_later"
            android:textColor="#344054"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/save_for_later"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/button_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/footer_view"
            android:id="@+id/nxt2_btn"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/blue_background_border"
            app:layout_constraintStart_toEndOf="@+id/save_for_later"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>