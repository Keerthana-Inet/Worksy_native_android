<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.travelRequest.TravelRequestTab1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/nested_scroll_view"
        android:scrollbars="none"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/inter_semibold"
        android:padding="@dimen/_5sdp"
        android:id="@+id/title_txt"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/text_color"
        android:text="@string/where_are_you_travelling_to"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/inter_regular"
        android:textSize="@dimen/_14sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:id="@+id/destination"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"
        android:textColor="#475467"
        android:text="@string/destination_txt"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableStart="@drawable/domestic"
        android:padding="@dimen/_10sdp"
        android:text="Domestic"
        android:id="@+id/domestic"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_14sdp"
        android:textColor="#1F2D40"
        android:background="@drawable/bg_filter"
        app:layout_constraintStart_toStartOf="parent"
        android:drawablePadding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/destination"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableStart="@drawable/international"
        android:padding="@dimen/_10sdp"
        android:text="International"
        android:id="@+id/international"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_text"
        android:backgroundTint="@color/button_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:drawablePadding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/domestic"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/inter_regular"
        android:textSize="@dimen/_14sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/location_txt"
        app:layout_constraintTop_toBottomOf="@+id/international"
        android:textColor="#475467"
        android:text="@string/location_txt"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_filter"
        android:layout_marginTop="10sp"
        android:id="@+id/country_relative"
        app:layout_constraintTop_toBottomOf="@+id/location_txt"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_14sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/country"
            android:textColor="#28364D"
            android:text="@string/country"
            android:layout_height="wrap_content"/>

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ccp_showFlag="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/country"
            app:ccp_showFullName="true"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_filter"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@+id/country_relative"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/address_txt"
                android:padding="@dimen/_5sdp"
                android:textColor="#344054"
                android:text="@string/address_if_applicable"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_below="@+id/address_txt"
                android:minLines="5"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:hint="-"
                android:background="@android:color/transparent"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_medium"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>